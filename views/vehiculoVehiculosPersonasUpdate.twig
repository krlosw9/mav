{% extends "layout.twig" %} 

{% block content %}

<h1>
    Personas-Vehículo
    <small>Editar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./vehiclelist">Vehículos</a></li>
    <li><a href="./vehiclepeoplelist??={{idVeh}}">Personas-Vehículo</a></li>
    <li class="active">Editar</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Personas-Vehículo - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="vehiclepeopleupdate" method="post" role="form">
          <div class="box-body">
            <input type="hidden" name="id" value="{{ vehiculoPersona.id }}" required>
            <input type="hidden" name="idVeh" value="{{ idVeh }}" required>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Vehiculo (*):</label>
              <input type="text" name="referencia" class="form-control" placeholder="" maxlength="50" value="{{vehiculo.placa}}" disabled required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Persona(*):</label>
              <select class="form-control select-picker" name="perid" required>
                {% for persona in personas %}
                  {% if vehiculoPersona.perid == persona.id %} 
                    <option value="{{ persona.id }}" selected>{{ persona.nombre }} {{ persona.apellido }}</option>
                  {% else %}
                    <option value="{{ persona.id }}">{{ persona.nombre }} {{ persona.apellido }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Rol (*):</label>
              <select class="form-control select-picker" name="idrolpersonavehiculo" required>
                {% for rol in roles %}
                  {% if vehiculoPersona.idrolpersonavehiculo == rol.id %} 
                    <option value="{{ rol.id }}" selected>{{ rol.nombre }}</option>
                  {% else %}
                    <option value="{{ rol.id }}">{{ rol.nombre }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer col-xs-12 col-sm-12 col-md-12">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./vehiclepeoplelist??={{idVeh}}">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
