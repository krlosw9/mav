{% extends "layout.twig" %}

{% block content %}

<h1>
    Taller
    <small>Editar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./workshoplist">Taller</a></li>
    <li class="active">Editar</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Información de la taller - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="workshopupdate" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <input type="hidden" name="id" value="{{ operadores.id }}" required>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Tipo de Documento (*):</label>
              <select class="form-control select-picker" name="tipodocumentoid" required>
                {% for tipo in tiposdocumentos %}
                  {% if operadores.tipodocumentoid == tipo.id %} 
                    <option value="{{ tipo.id }}" selected>{{ tipo.nombre }}</option>
                  {% else %}
                    <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Numero Documento (*):</label>
              <input type="number" name="numerodocumento" class="form-control" placeholder="Numero menor a 15 digitos" min="0" max="999999999999999" value="{{ operadores.numerodocumento }}" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Nombre (*):</label>
              <input type="text" name="nombre" class="form-control" placeholder="" value="{{ operadores.nombre }}" maxlength="50" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Dirección (*):</label>
              <input type="text" name="direccion" class="form-control" placeholder="" value="{{ operadores.direccion }}" maxlength="50" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Telefono:</label>
              <input type="number" name="telefono" class="form-control" min="0" max="999999999999999" value="{{ operadores.telefono }}" title="El valor debe ser mayor a 0 y debe tener menos de 15 digitos">
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Celular (*):</label>
              <input type="number" name="celular" class="form-control" required min="0" value="{{ operadores.celular }}" max="999999999999999" title="El valor debe ser mayor a 0 y debe tener menos de 15 digitos">
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Correo (*):</label>
              <input type="email" name="correo" class="form-control" placeholder="" value="{{ operadores.correo }}" maxlength="100" required>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer col-xs-12 col-sm-12 col-md-12" style="padding-left: 25px;">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./workshoplist">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
