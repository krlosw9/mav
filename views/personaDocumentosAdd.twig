{% extends "layout.twig" %} 

{% block content %}

<h1>
    Documentos
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./documentslist??={{idPer}}">Documentos</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Documentos - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="documentsadd" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <input type="hidden" name="idPer" value="{{idPer}}">
            <div class="form-group col-xs-3">
              <label for="">Fecha expedici√≥n (*):</label>
              <div class="input-group date">
                  <input name="fechainicio" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-3">
              <label for="">Fecha vencimiento (*):</label>
              <div class="input-group date">
                  <input name="fechafinal" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-6">
              <label>Tipo de Documento (*):</label>
              <select class="form-control select-picker" name="tdpid" required>
                {% for tipo in tiposdocumentos %}
                  <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Referencia (*):</label>
              <input type="text" name="referencia" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Emisor (*):</label>
              <input type="text" name="emisor" class="form-control" placeholder="" maxlength="100" required>
            </div>
            

          <!-- /.box-body -->
          <div class="box-footer">
            <center><button type="submit" class="btn btn-primary">Registrar</button></center>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
