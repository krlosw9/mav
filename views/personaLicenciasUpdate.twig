{% extends "layout.twig" %} 

{% block content %}

<h1>
    Licencias
    <small>Editar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./peoplelist">Personas</a></li>
    <li><a href="./licenselist??={{idPer}}">Licencias</a></li>
    <li class="active">Editar</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Licencias - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="licenseupdate" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <input type="hidden" name="id" value="{{ licencias.id }}" required>
            <input type="hidden" name="idPer" value="{{ idPer }}" required>
            
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label for="">Fecha expedici√≥n(*):</label>
              <div class="input-group date">
                  <input name="fechaexpedicion" type="date" class="form-control" data-placement="top" value="{{ licencias.fechaexpedicion }}" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label for="">Fecha vencimiento(*):</label>
              <div class="input-group date">
                  <input name="fechavencimiento" type="date" class="form-control" data-placement="top" value="{{ licencias.fechavencimiento }}" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Categoria (*):</label>
              <select class="form-control select-picker" name="catid" required>
                {% for categoria in categoriaslicencias %}
                  {% if licencias.catid == categoria.id %} 
                    <option value="{{ categoria.id }}" selected>{{ categoria.descripcion }}</option>
                  {% else %}
                    <option value="{{ categoria.id }}">{{ categoria.descripcion }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Referencia(*):</label>
              <input type="text" name="numero" class="form-control" placeholder="" maxlength="50" value="{{ licencias.numero }}" required>
            </div>
            <input type="hidden" name="urlcomprobanteAntiguo" value="{{ licencias.urlcomprobante }}">
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Comprobante (*):</label>
              <input type="file" name="urlcomprobante" class="form-control">
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer col-xs-12 col-sm-12 col-md-12">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./licenselist??={{idPer}}">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
