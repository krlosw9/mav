{% extends "layout.twig" %}

{% block content %}

<h1>
    Persona
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./peoplelist">Persona</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Informacion de la persona - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="peopleadd" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <div class="form-group col-xs-6">
              <label>Tipo de Documento (*):</label>
              <select class="form-control select-picker" name="tipodocumentoid" required>
                {% for tipo in tiposdocumentos %}
                  <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Numero Documento (*):</label>
              <input type="number" name="numerodocumento" class="form-control" placeholder="Numero menor a 15 digitos" min="0" max="999999999999999" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Nombre (*):</label>
              <input type="text" name="nombre" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Apellido (*):</label>
              <input type="text" name="apellido" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Genero (*):</label>
              <select class="form-control select-picker" name="genero" required>
                <option value="">Seleccione una opción</option>
                <option value="Femenino">Femenino</option>
                <option value="Masculino">Masculino</option>
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Estado civil (*):</label>
              <select class="form-control select-picker" name="estadocivil" required>
                <option value="Casado">Casado</option>
                <option value="Soltero">Soltero</option>
                <option value="Divorciado">Divorciado</option>
                <option value="Viudo">Viudo</option>
              </select>
            </div>
            <div class="form-group col-xs-3">
              <label for="">Fecha-Nacimiento (*):</label>
              <div class="input-group date">
                  <input name="fechanacimiento" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-3">
              <label>Rh (*):</label>
              <select class="form-control select-picker" name="rh" required>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="Otro">Otro</option>
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Nivel Educativo:</label>
              <select class="form-control select-picker" name="niveleducativo">
                <option value="Primaria">Primaria</option>
                <option value="Bachillerato">Bachillerato</option>
                <option value="Tecnico">Tecnico</option>
                <option value="Tecnologico">Tecnologico</option>
                <option value="Profesional">Profesional</option>
                <option value="Posgrado">Posgrado</option>
                <option value="Otro">Otro</option>
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Profesión:</label>
              <input type="text" name="profesion" class="form-control" placeholder="">
            </div>
            <div class="form-group col-xs-6">
              <label>Dirección (*):</label>
              <input type="text" name="direccion" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Correo (*):</label>
              <input type="email" name="correo" class="form-control" placeholder="" maxlength="100" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Telefono:</label>
              <input type="number" name="telefono" class="form-control" min="0" max="999999999999999" title="El valor debe ser mayor a 0 y debe tener menos de 15 digitos">
            </div>
            <div class="form-group col-xs-6">
              <label>Celular (*):</label>
              <input type="number" name="celular" class="form-control" required min="0" max="999999999999999" title="El valor debe ser mayor a 0 y debe tener menos de 15 digitos">
            </div>
            <div class="form-group col-xs-6">
              <label>Rol (*):</label>
              <select class="form-control select-picker" name="rolid" required>
                {% for rol in roles %}
                  <option value="{{ rol.id }}">{{ rol.nombrerol }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <center><button type="submit" class="btn btn-primary">Registrar</button></center>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
