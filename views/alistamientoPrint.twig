<!DOCTYPE html>
<html>
<head>
  <title>Alistamiento</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css' integrity='sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS' crossorigin='anonymous'>
</head>
<body>
  {#<body onload='window.print();'>#}
  <div class='col-md-12' style='margin-left: 35px; margin-top: 25px; margin-right: 20px;'>
    <div class="row" style="padding-left: 5px;">
      


    <div class='row'>
      <div class="form-group col-xs-6 col-sm-4 col-md-4" style="font-size:17px; font-weight: bold;">
        Elementos a inspeccionar
      </div>
      <div class="form-group col-xs-4 col-sm-2 col-md-2" style="font-size:17px; font-weight: bold;">
        Cumple
      </div>
      <div class="form-group col-xs-12 col-sm-6 col-md-6" style="font-size:17px; font-weight: bold;">
        Observaciones
      </div>
      {% for grupoAlis in gruposalistamiento %}<br><br>
        <div class="form-group col-xs-12 col-sm-12 col-md-12" style="font-size:17px; padding-left: 60px; font-weight: bold;">
          {{ grupoAlis.nombre }} 
        </div>
        <hr align="center" noshade="noshade" size="4" width="80%"/>
        {% for alistamiento in alistamientosRegistrados %}
          {% if grupoAlis.id == alistamiento.gaid %}
            <div class="form-group col-xs-6 col-sm-4 col-md-4" style="font-size:15px;">
              {{ alistamiento.nombre }}
              <input type="hidden" name="taid[]" value="{{ alistamiento.id }}">
              <input type="hidden" name="calificacionTipoAlis{{ alistamiento.id }}" value="{{ alistamiento.calificacion }}">
            </div>
            <div class="form-group col-xs-4 col-sm-2 col-md-2" style="padding-left: 35px;">
              {{ alistamiento.ccheck }}{#<input type="checkbox" checked name="check{{ alistamiento.id }}">#}
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6" >
              {{ alistamiento.observacion }}
              {#<input type="text" name="obs{{ alistamiento.id }}" placeholder="ObservaciÃ³n" style="width:90%;">#}
            </div>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
      <div class='row'>
        <div class="form-group col-md-12">
          <label><strong>Observaciones generales:</strong></label>
        </div>
        <div class="form-group col-md-12" style='border: 1px black solid; word-wrap: break-word; width: 400px; height: 147px; font-size: 20px;'>$observacion1
        </div>
      </div>

    </div>
  </div>
<!-- ./wrapper -->
</body>
</body>
</html>