{% extends "layout.twig" %}

{% block content %}

<h1>
    Rh
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./rhlist">Rh</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12 col-sm-7 col-md-7">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Rh - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="rhadd" method="post" role="form">
          <div class="box-body">

            <div class="form-group col-xs-12 col-sm-10 col-md-10">
              <label>Nombre (*):</label>
              <input type="text" name="nombre" class="form-control" placeholder="Ej: O+" maxlength="20" required>
            </div>
          </div>
          <!-- /.box-body -->
          
          <div class="box-footer col-xs-12 col-sm-12 col-md-12" style="padding-left: 25px;">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./rhlist">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
