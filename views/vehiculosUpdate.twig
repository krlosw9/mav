{% extends "layout.twig" %}

{% block content %}
 
<h1>
    Vehículo
    <small>Editar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./vehiclelist">Vehiculo</a></li>
    <li class="active">Editar</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Información del Vehículo - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="vehicleupdate" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <input type="hidden" name="id" value="{{ vehiculos.id }}" required>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Número Interno:</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" maxlength="5" name="interno" style="text-transform: uppercase;" title="" value="{{vehiculos.interno}}" type="text" />
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Placa (*):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" maxlength="6" name="placa" style="text-transform: uppercase;" title="" type="text" value="{{vehiculos.placa}}" required="" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Tipo Vinculación (*):</label>
                <select class="form-control select-picker" name="tipvinculacionid" required>
                  {% for tipo in tiposvinculacion %}
                    {% if vehiculos.tipvinculacionid == tipo.id %} 
                      <option value="{{ tipo.id }}" selected>{{ tipo.nombre }}</option>
                    {% else %}
                      <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Kilometraje (*):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" name="km" style="text-transform: uppercase;" title="" value="{{vehiculos.km}}" type="number" min="0" max="99999999999999999999" required="" />
              </div>
            </div>
            <div class="box-header with-border">
              <h3 class="box-title">Información Licencia de Tránsito</h3>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>No. Licencia de Tránsito (*):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" maxlength="50" name="licenciatransito" style="text-transform: uppercase;" value="{{vehiculos.licenciatransito}}" title="" type="text" required="" />
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Capacidad de Pasajeros (*):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip"  min="0" max="99" name="capacidad" title="" type="number" value="{{vehiculos.capacidad}}" required="" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Marca (*):</label>
                <select class="form-control select-picker" name="marcid" required>
                  {% for marca in marcas %}
                    {% if vehiculos.marcid == marca.id %} 
                      <option value="{{ marca.id }}" selected>{{ marca.nombre }}</option>
                    {% else %}
                      <option value="{{ marca.id }}">{{ marca.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Línea (*):</label>
                <select class="form-control select-picker" name="linea" required>
                  {% for linea in lineas %}
                    {% if vehiculos.linea == linea.id %} 
                      <option value="{{ linea.id }}" selected>{{ linea.nombre }}</option>
                    {% else %}
                      <option value="{{ linea.id }}">{{ linea.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Modelo (*):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" min="1950" max="{{maximumYearModel}}" name="modelo" title="" placeholder="Ej: 2010" value="{{vehiculos.modelo}}" type="number" />
              </div>
              <div class="form-group col-xs-6 col-sm-3 col-md-3">
                <label>Cilindraje (CC):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" min="0" value="{{vehiculos.cilindraje}}" max="99999" name="cilindraje" title="" type="number" />
              </div>
              <div class="form-group col-xs-6 col-sm-3 col-md-3">
                <label>Potencia (HP):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" min="0" max="99999" value="{{vehiculos.potencia}}" name="potencia" title="" type="number" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Color (*):</label>
                <select class="form-control select-picker" name="colorid" required>
                  {% for color in colores %}
                    {% if vehiculos.colorid == color.id %}
                      <option value="{{ color.id }}" selected>{{ color.nombre }}</option>
                    {% else %}
                      <option value="{{ color.id }}">{{ color.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Servicio (*):</label>
                <select class="form-control select-picker" name="servid" required>
                  {% for servicio in servicios %}
                    {% if vehiculos.servid == servicio.id %}
                      <option value="{{ servicio.id }}" selected>{{ servicio.nombre }}</option>
                    {% else %}
                      <option value="{{ servicio.id }}">{{ servicio.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Clase (*):</label>
                <select class="form-control select-picker" name="clasid" required>
                  {% for clase in clases %}
                    {% if vehiculos.clasid == clase.id %}
                      <option value="{{ clase.id }}" selected>{{ clase.nombre }}</option>
                    {% else %}
                      <option value="{{ clase.id }}">{{ clase.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Tipo Carrocería (*):</label>
                <select class="form-control select-picker" name="carroceria" required>
                  {% for carroceria in carrocerias %}
                    {% if vehiculos.carroceria == carroceria.id %}
                      <option value="{{ carroceria.id }}" selected>{{ carroceria.nombre }}</option>
                    {% else %}
                      <option value="{{ carroceria.id }}">{{ carroceria.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Combustible (*):</label>
                <select class="form-control select-picker" name="combustibleid" required>
                  {% for combustible in combustibles %}
                    {% if vehiculos.combustibleid == combustible.id %}
                      <option value="{{ combustible.id }}" selected>{{ combustible.nombre }}</option>
                    {% else %}
                      <option value="{{ combustible.id }}">{{ combustible.nombre }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Puertas (*):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" min="0" max="9" name="puertas" title="" type="number" value="{{vehiculos.puertas}}" required="" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Número de Motor:</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" maxlength="50" name="nummotor" style="text-transform: uppercase;" value="{{vehiculos.nummotor}}" title="" type="text" />
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>VIN:</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" maxlength="50" name="vin" style="text-transform: uppercase;" value="{{vehiculos.vin}}" title="" type="text" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Número de Serie:</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" id="Veh_numserie" maxlength="50" name="numserie" style="text-transform: uppercase;" value="{{vehiculos.numserie}}" title="" type="text" />
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Número de Chasis (*):</label>
                <input class="form-control" data-placement="top" data-toggle="tooltip" maxlength="50" name="numchasis" style="text-transform: uppercase;" title="" value="{{vehiculos.numchasis}}" type="text" required="" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-3">
                <label>Fecha Matrícula (*):</label>
                <div class="input-group date">
                    <input class="form-control" data-placement="top" data-toggle="tooltip"  name="fechamatricula" title="" type="date" value="{{vehiculos.fechamatricula}}" required="" />
                </div>
              </div>
              <div class="form-group col-xs-12 col-sm-6 col-md-3">
                  <label>Fecha Exp. Licencia (*):</label>
                  <div class="input-group date">
                      <input class="form-control" data-placement="top" data-toggle="tooltip" name="fechaexpedicion" title="" type="date" value="{{vehiculos.fechaexpedicion}}" required="" />
                  </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                  <label>Organismo de Tránsito (*):</label>
                  <select class="form-control select-picker" name="orgtransitoid" required>
                    {% for orgtransito in organimostransito %}
                      {% if vehiculos.orgtransitoid == orgtransito.id %}
                        <option value="{{ orgtransito.id }}" selected>{{ orgtransito.nombre }}</option>
                      {% else %}
                        <option value="{{ orgtransito.id }}">{{ orgtransito.nombre }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-12 col-sm-6 col-md-6" style="padding-top: 20px;">
                <div class="form-group col-xs-9 col-sm-9 col-md-6" >
                  <label>Vehículo activo en la empresa:</label>
                </div>
                <div class="form-group col-xs-3 col-sm-3 col-md-6" style="padding-left: 5px; padding-top: 5px;">
                  <input type="checkbox" name="activocheck" style="transform: scale(2);" {% if vehiculos.activocheck == 1 %}checked{% endif %}>
                </div>
              </div>
            </div>
            
              
            
          </div>
          <!-- /.box-body -->
          <div class="box-footer col-xs-12 col-sm-12 col-md-12">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./vehiclelist">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
