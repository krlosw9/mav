{% extends "layout.twig" %}

{% block content %}

<h1>
    Comparendos
    <small>Editar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./subpoenalist">Comparendos</a></li>
    <li class="active">Editar</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Información del comparendo - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="subpoenaupdate" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <input type="hidden" name="id" value="{{ comparendos.id }}" required>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Tipo (*):</label>
              <select class="form-control select-picker" name="tipcomid" required>
                {% for tipo in tipos %}
                  {% if comparendos.tipcomid == tipo.id %} 
                    <option value="{{ tipo.id }}" selected>{{ tipo.nombre }}</option>
                  {% else %}
                    <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                  {% endif %}
                {% endfor %}
              </select> 
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label for="">Fecha (*):</label>
              <div class="input-group date">
                  <input name="fecha" type="date" value="{{comparendos.fecha}}" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Lugar (*):</label>
              <input type="text" name="lugar" class="form-control" placeholder="" value="{{ comparendos.lugar }}" maxlength="75" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Descripcion (*):</label>
              <input type="text" name="descripcion" class="form-control" placeholder="" maxlength="255" value="{{ comparendos.descripcion }}" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Estado (*):</label>
              <select class="form-control select-picker" name="idestado" required>
                {% for estado in estados %}
                  {% if comparendos.idestado == estado.id %} 
                    <option value="{{ estado.id }}" selected>{{ estado.nombre }}</option>
                  {% else %}
                    <option value="{{ estado.id }}">{{ estado.nombre }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Vehículos (*):</label>
              <select class="form-control select-picker" name="vehid" required>
                {% for vehiculo in vehiculos %}
                  {% if comparendos.vehid == vehiculo.id %} 
                    <option value="{{ vehiculo.id }}" selected>{{ vehiculo.placa }}</option>
                  {% else %}
                    <option value="{{ vehiculo.id }}">{{ vehiculo.placa }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer col-xs-12 col-sm-12 col-md-12" style="padding-left: 25px;">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./subpoenalist">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
