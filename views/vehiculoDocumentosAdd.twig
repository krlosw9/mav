{% extends "layout.twig" %} 

{% block content %}

<h1>
    Documentos
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./vehiclelist">Vehículos</a></li>
    <li><a href="./vehicledoclist??={{idVeh}}">Documentos</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Documentos - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="vehicledocadd" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <input type="hidden" name="idVeh" value="{{idVeh}}">
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label for="">Fecha expedición (*):</label>
              <div class="input-group date">
                  <input name="fechainicio" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label for="">Fecha vencimiento (*):</label>
              <div class="input-group date">
                  <input name="fechafinal" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Tipo de Documento (*):</label>
              <select class="form-control select-picker" name="tdvid" required>
                {% for tipo in tiposdocumentos %}
                  <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Referencia (*):</label>
              <input type="text" name="referencia" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Emisor (*):</label>
              <input type="text" name="emisor" class="form-control" placeholder="" maxlength="100" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Comprobante (*):</label>
              <input type="file" name="urlcomprobante" class="form-control" required>
            </div>
            

          <!-- /.box-body -->
          <div class="box-footer col-xs-12 col-sm-12 col-md-12" >
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./vehicledoclist??={{idVeh}}">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
