{% extends "layout.twig" %}

{% block content %}

<h1>
    Alistamiento
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./checklist">Alistamiento</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Alistamiento - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="peopleadd" method="post" role="form">
          <div class="box-body">
            <div>
            <table class="table table-striped" >
              <thead>
                <tr>
                  <th style="width: 100px">Elementos a inspeccionar</th>
                  <th style="width: 50px">Cumple</th>
                  <th style="width: 200px">Observaciones</th>
                </tr>
              </thead>
            {% for grupoAlis in gruposalistamiento %}<br><br>
              <tbody>
              <tr>
                <td style="text-align: center; font-size:17px;" colspan=3 >
                  {{ grupoAlis.nombre }}
                </td>
              </tr>
              {% for tipoAlis in tiposalistamiento %}
                {% if grupoAlis.id == tipoAlis.gaid %}
                  <tr>
                    <td>
                      {{ tipoAlis.nombre }}
                    </td>
                    <td style="padding-left: 25px;">
                      <input type="checkbox" name="">
                    </td>
                    <td>
                      <input type="text" name="" placeholder="Observaci贸n" style="width:90%;">
                    </td>
                  </tr>
                {% endif %}
              {% endfor %}
              </tbody>
            {% endfor %}
            </table>
            </div>
            {#
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Tipo de Documento (*):</label>
              <select class="form-control select-picker" name="tipodocumentoid" required>
                {% for tipo in tiposdocumentos %}
                  <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Numero Documento (*):</label>
              <input type="number" name="numerodocumento" class="form-control" placeholder="Numero menor a 15 digitos" min="0" max="999999999999999" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Nombre (*):</label>
              <input type="text" name="nombre" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Apellido (*):</label>
              <input type="text" name="apellido" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Genero (*):</label>
              <select class="form-control select-picker" name="genero" required>
                <option value="">Seleccione una opci贸n</option>
                {% for genero in generos %}
                  <option value="{{ genero.id }}">{{ genero.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Estado civil (*):</label>
              <select class="form-control select-picker" name="estadocivil" required>
                {% for estadocivil in estadocivil %}
                  <option value="{{ estadocivil.id }}">{{ estadocivil.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label for="">Fecha-Nacimiento (*):</label>
              <div class="input-group date">
                  <input name="fechanacimiento" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label>Rh (*):</label>
              <select class="form-control select-picker" name="rh" required>
                {% for rh in rh %}
                  <option value="{{ rh.id }}">{{ rh.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Nivel Educativo:</label>
              <select class="form-control select-picker" name="niveleducativo" required>
                {% for niveleducativo in niveleducativo %}
                  <option value="{{ niveleducativo.id }}">{{ niveleducativo.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Profesi贸n:</label>
              <input type="text" name="profesion" class="form-control" placeholder="">
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Direcci贸n (*):</label>
              <input type="text" name="direccion" class="form-control" placeholder="" maxlength="50" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Correo (*):</label>
              <input type="email" name="correo" class="form-control" placeholder="" maxlength="100" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Telefono:</label>
              <input type="number" name="telefono" class="form-control" min="0" max="999999999999999" title="El valor debe ser mayor a 0 y debe tener menos de 15 digitos">
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Celular (*):</label>
              <input type="number" name="celular" class="form-control" required min="0" max="999999999999999" title="El valor debe ser mayor a 0 y debe tener menos de 15 digitos">
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Rol (*):</label>
              <select class="form-control select-picker" name="rolid" required>
                {% for rol in roles %}
                  <option value="{{ rol.id }}">{{ rol.nombrerol }}</option>
                {% endfor %}
              </select>
            </div>

            #}
          </div>
          <!-- /.box-body -->
          
          <div class="box-footer col-xs-12 col-sm-12 col-md-12" style="padding-left: 25px;">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./peoplelist">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
