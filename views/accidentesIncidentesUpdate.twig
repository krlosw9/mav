{% extends "layout.twig" %}

{% block content %}

<h1>
    Accidentes/Incidentes
    <small>Editar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./incidentlist">Accidentes/Incidentes</a></li>
    <li class="active">Editar</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Información del accidente o incidente - <small>Todos los campos marcados con un asterisco (*) son obligatorios.</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="incidentupdate" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <input type="hidden" name="id" value="{{ incidentes.id }}" required>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Vehículo (*):</label>
              <select class="form-control select-picker" name="vehid" required>
                {% for vehiculo in vehiculos %}
                  {% if incidentes.vehid == vehiculo.id %} 
                    <option value="{{ vehiculo.id }}" selected>{{ vehiculo.placa }}</option>
                  {% else %}
                    <option value="{{ vehiculo.id }}">{{ vehiculo.placa }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Tipo (*):</label>
              <select class="form-control select-picker" name="tipacid" required>
                {% for tipo in tipos %}
                  {% if incidentes.tipacid == tipo.id %} 
                    <option value="{{ tipo.id }}" selected>{{ tipo.nombre }}</option>
                  {% else %}
                    <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-3">
              <label for="">Fecha (*):</label>
              <div class="input-group date">
                  <input name="fecha" type="date" class="form-control" value="{{incidentes.fecha}}" data-placement="top" data-toggle="tooltip"/>
              </div>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Clasificación (*):</label>
              <select class="form-control select-picker" name="clasid" required>
                {% for clasificacion in clasificaciones %}
                  {% if incidentes.clasid == clasificacion.id %} 
                    <option value="{{ clasificacion.id }}" selected>{{ clasificacion.nombre }}</option>
                  {% else %}
                    <option value="{{ clasificacion.id }}">{{ clasificacion.nombre }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-12 col-md-12">
              <label>Descripción corta (*):</label>
              <input type="text" name="descripcioncorta" value="{{incidentes.descripcioncorta}}" class="form-control" placeholder="" maxlength="75">
            </div>
            <div class="form-group col-xs-12 col-sm-12 col-md-12">
              <label>Descripción general (*):</label>
              <textarea class="form-control rounded-0" name="descripcionlarga" placeholder="Opcional" rows="3">{{incidentes.descripcionlarga}}</textarea>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer col-xs-12 col-sm-12 col-md-12" style="padding-left: 25px;">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a type="button" class="btn btn-default" href="./incidentlist">Cancelar</a>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
            {{ responseMessage }}
          </div>
        </form>
      </div>

{% endblock %}
